@model ProductVM

<div class="card shadow border-0 my-4">
	<div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="text-white py-2">Export Data</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<form method="post" asp-controller="Product" asp-action="Export"  class="row">
			<div class="row">
				<div class="col-10">
					<div class="border p-3">
						@*<div asp-validation-summary="ModelOnly"></div>*@

						<div class="form-floating py-2 col-12">
							<input asp-for="Product.Date" type="date" class="form-control border-0 shadow" />
							<label asp-for="Product.Date" class="ms-2"></label>
						</div>



						<div class="row pt-2">
							<div class="col-6 col-md-3">
									<button type="submit" class="btn btn-primary form-control">Export File</button>
							</div>
							<div class="col-6 col-md-3">
								<a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary border form-control">Back To List </a>
							</div>
						</div>
					</div>

				</div>
			</div>
		</form>
	</div>

</div>

@section Scripts {
    <script>
        @if (TempData["invalidDate"] != null && (bool)TempData["invalidDate"])
        {
            <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Products not available!',
                    text: '@TempData["error"]',
                    showConfirmButton: false,
                    timer: 3000
                });
            </text>
        }
    </script>
}



